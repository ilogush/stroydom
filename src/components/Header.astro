---
import * as m from "../paraglide/messages.js"
---

<header class="header">
	<div class="header__container">
		<div class="header__logo">
			<a href="/"><img src="logo.webp" alt="BuildGo logo"></a>
		</div>
		<div class="header__menu menu">
			<nav class="menu__body">
				<ul class="menu__list">
					<li class="menu-item"><a href="#" class="menu-link">{m.headerMain()}</a></li>
					<li class="menu-item"><a href="#" class="menu-link">{m.headerAbout()}</a></li>
					<li class="menu-item has-submenu">
						<a href="#" class="menu-link _icon-arrow-down">{m.headerServices()}</a>
						<ul class="sub-menu">
							<li class="menu-item"><a href="#" class="menu-link">{m.headerRepair()}</a></li>
							<li class="menu-item"><a href="#" class="menu-link">{m.headerReconstruction()}</a></li>
							<li class="menu-item"><a href="#" class="menu-link">{m.headerConstruction()}</a></li>
						</ul>
						<span class="mobile-menu-arrow _icon-plus"></span>
					</li>
					<li class="menu-item"><a href="#" class="menu-link">{m.headerWorks()}</a></li>
					<li class="menu-item"><a href="#" class="menu-link">{m.headerNews()}</a></li>
				</ul>
			</nav>
		</div>
		<div class="header__contacts" data-da=".menu__body, 991.98, last">
			<a class="_icon-telegram" href="https://t.me/+19176606994" target="_blank" aria-label="Telegram"></a>
			<a class="_icon-whatsapp" href="https://wa.me/" target="_blank" aria-label="WhatsApp"></a>
		</div>
		<button type="button" class="menu__icon icon-menu"><span></span></button>
	</div>
</header>
