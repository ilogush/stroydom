---
import * as m from "../paraglide/messages.js"
---
<section class="reviews">
	<div class="reviews__container">
		<h2 class="reviews__title title">{m.clientReviews()}</h2>
	</div>
	<div class="reviews__slider swiper swiper-initialized swiper-horizontal swiper-autoheight swiper-backface-hidden">
		<div class="reviews__wrapper swiper-wrapper" style="height: 489px; transition-duration: 0ms; transform: translate3d(-1758px, 0px, 0px); transition-delay: 0ms;">
			
		<div class="reviews__slide swiper-slide slide-reviews" data-swiper-slide-index="5" style="width: 561px; margin-right: 25px;">
				<div class="slide-reviews__head">
					<div class="slide-reviews__image"><img class="ibg" src="images/reviews-user-03.webp" alt={m.elenaR()}></div>
					<div class="slide-reviews__title">
						<h3>{m.elenaR()}</h3>
						<span>{m.siteManager()}</span>
					</div>
				</div>
				<p>{m.review1()}</p>
				<div class="slide-reviews__rating">★★★★★</div>
			</div><div class="reviews__slide swiper-slide slide-reviews" data-swiper-slide-index="0" style="width: 561px; margin-right: 25px;">
